<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <GeneDef Name="GeneLivingBase" Abstract="True">
    <displayCategory>Living</displayCategory>
    <exclusionTags>
      <li>Living</li>
    </exclusionTags>
  </GeneDef>

  <GeneDef ParentName="GeneLivingBase">
    <defName>Jealous</defName>
    <label>Jealous</label>
    <labelShortAdj>Jealous</labelShortAdj>
    <description>Carriers of this gene have "Jealous" trait.</description>
    <iconPath>UI/Icons/Genes/Gene_NonSenescent</iconPath>
    <displayOrderInCategory>10</displayOrderInCategory>
    <forcedTraits>
      <li>
        <def>Jealous</def>
      </li>
    </forcedTraits>
    <biostatCpx>1</biostatCpx>
    <biostatMet>2</biostatMet>
  </GeneDef>

  <GeneDef ParentName="GeneLivingBase">
    <defName>Greedy</defName>
    <label>Greedy</label>
    <labelShortAdj>Greedy</labelShortAdj>
    <description>Carriers of this gene have "Greedy" trait.</description>
    <iconPath>UI/Icons/Genes/Gene_NonSenescent</iconPath>
    <displayOrderInCategory>20</displayOrderInCategory>
    <forcedTraits>
      <li>
        <def>Greedy</def>
      </li>
    </forcedTraits>
    <biostatCpx>1</biostatCpx>
    <biostatMet>1</biostatMet>
  </GeneDef>

  <GeneDef ParentName="GeneLivingBase">
    <defName>NeutralLiving</defName>
    <label>Neutral Living</label>
    <labelShortAdj>Neutral Living</labelShortAdj>
    <description>Supresses traits that related to living standards.</description>
    <iconPath>UI/Icons/Genes/Gene_Sterile</iconPath>
    <displayOrderInCategory>30</displayOrderInCategory>
    <suppressedTraits>
      <li>
        <def>NaturalMood</def>
        <degree>-2</degree>
      </li>
      <li>
        <def>NaturalMood</def>
        <degree>-1</degree>
      </li>
      <li>
        <def>NaturalMood</def>
        <degree>1</degree>
      </li>
      <li>
        <def>NaturalMood</def>
        <degree>2</degree>
      </li>
    </suppressedTraits>
    <biostatCpx>1</biostatCpx>
    <biostatMet>0</biostatMet>
  </GeneDef>

  <GeneDef ParentName="GeneLivingBase">
    <defName>Ascetic</defName>
    <label>Ascetic</label>
    <labelShortAdj>Ascetic</labelShortAdj>
    <description>Carriers of this gene have "Ascetic" trait.</description>
    <iconPath>UI/Icons/Genes/Gene_NonSenescent</iconPath>
    <displayOrderInCategory>40</displayOrderInCategory>
    <forcedTraits>
      <li>
        <def>Ascetic</def>
      </li>
    </forcedTraits>
    <exclusionTags>
      <li>Living</li>
      <li>Gourmand</li>
    </exclusionTags>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-1</biostatMet>
  </GeneDef>
