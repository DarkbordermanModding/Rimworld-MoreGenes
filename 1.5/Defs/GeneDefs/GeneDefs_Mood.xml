    <iconPath>UI/Icons/Genes/Gene_Sterile</iconPath>
    <displayOrderInCategory>30</displayOrderInCategory>
    <suppressedTraits>
      <li>
        <def>NaturalMood</def>
        <degree>-2</degree>
      </li>
      <li>
        <def>NaturalMood</def>
        <degree>-1</degree>
      </li>
      <li>
        <def>NaturalMood</def>
        <degree>1</degree>
      </li>
      <li>
        <def>NaturalMood</def>
        <degree>2</degree>
      </li>
    </suppressedTraits>
    <biostatCpx>1</biostatCpx>
    <biostatMet>0</biostatMet>
  </GeneDef>

  <GeneDef ParentName="GeneMoodBase">
    <defName>MoodOptimist</defName>
