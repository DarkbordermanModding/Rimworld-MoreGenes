<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <GeneDef Name="GeneMoodBase" Abstract="True">
    <displayCategory>MoreGeneMood</displayCategory>
    <exclusionTags>
      <li>MoreGeneMood</li>
    </exclusionTags>
  </GeneDef>

  <GeneDef ParentName="GeneMoodBase">
    <defName>MoodDepressive</defName>
    <label>Depressive</label>
