    <description>Supresses traits that related to work speeds.</description>
    <iconPath>UI/Icons/Genes/Gene_Sterile</iconPath>
    <displayOrderInCategory>50</displayOrderInCategory>
    <suppressedTraits>
      <li>
        <def>Industriousness</def>
        <degree>-2</degree>
      </li>
      <li>
        <def>Industriousness</def>
        <degree>-1</degree>
      </li>
      <li>
        <def>Industriousness</def>
        <degree>1</degree>
      </li>
      <li>
        <def>Industriousness</def>
        <degree>2</degree>
      </li>
    </suppressedTraits>
    <biostatCpx>1</biostatCpx>
    <biostatMet>0</biostatMet>
  </GeneDef>
</Defs>
