<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <GeneDef Name="GeneWorksBase" Abstract="True">
    <displayCategory>Works</displayCategory>
    <exclusionTags>
      <li>Works</li>
    </exclusionTags>
  </GeneDef>

  <GeneDef ParentName="GeneWorksBase">
    <defName>WorksSlothful</defName>
    <label>Slothful</label>
    <labelShortAdj>Slothful</labelShortAdj>
    <description>Carriers of this gene have "Slothful" trait.</description>
    <iconPath>UI/Icons/Genes/Gene_Depressive</iconPath>
    <displayOrderInCategory>10</displayOrderInCategory>
    <forcedTraits>
      <li>
        <def>Industriousness</def>
        <degree>-2</degree>
      </li>
    </forcedTraits>
    <biostatCpx>1</biostatCpx>
    <biostatMet>5</biostatMet>
  </GeneDef>

  <GeneDef ParentName="GeneWorksBase">
    <defName>WorksLazy</defName>
    <label>Lazy</label>
    <labelShortAdj>Lazy</labelShortAdj>
    <description>Carriers of this gene have "Lazy" trait.</description>
    <iconPath>UI/Icons/Genes/Gene_Pessimist</iconPath>
    <displayOrderInCategory>20</displayOrderInCategory>
    <forcedTraits>
      <li>
        <def>Industriousness</def>
        <degree>-1</degree>
      </li>
    </forcedTraits>
    <biostatCpx>1</biostatCpx>
    <biostatMet>3</biostatMet>
  </GeneDef>

  <GeneDef ParentName="GeneWorksBase">
    <defName>WorksHardWorker</defName>
    <label>Hard Worker</label>
