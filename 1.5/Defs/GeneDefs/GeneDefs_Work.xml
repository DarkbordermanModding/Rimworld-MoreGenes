    <forcedTraits>
      <li>
        <def>Industriousness</def>
        <degree>1</degree>
      </li>
    </forcedTraits>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-2</biostatMet>
  </GeneDef>

  <GeneDef ParentName="GeneWorksBase">
    <defName>WorksIndustrious</defName>
    <label>Industrious</label>
    <labelShortAdj>Industrious</labelShortAdj>
    <description>Carriers of this gene have "Industrious" trait.</description>
    <iconPath>UI/Icons/Genes/Gene_Sanguine</iconPath>
    <displayOrderInCategory>40</displayOrderInCategory>
    <forcedTraits>
      <li>
        <def>Industriousness</def>
        <degree>2</degree>
      </li>
    </forcedTraits>
    <biostatCpx>1</biostatCpx>
    <biostatMet>-4</biostatMet>
